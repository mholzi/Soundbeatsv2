{
  "name": "soundbeats-hacs-integration",
  "version": "1.0.6",
  "description": "Home Assistant music trivia game integration for HACS",
  "main": "custom_components/soundbeatsv2/frontend/soundbeats-panel.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "clean": "rm -rf custom_components/soundbeatsv2/frontend/dist",
    "lint": "eslint custom_components/soundbeatsv2/frontend/src --ext .js",
    "lint:fix": "eslint custom_components/soundbeatsv2/frontend/src --ext .js --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "npm run lint && npm run type-check && npm run test",
    "prepare": "npm run build"
  },
  "keywords": [
    "home-assistant",
    "hacs",
    "music",
    "trivia",
    "game",
    "spotify",
    "integration"
  ],
  "author": "Markus Holzh√§user",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mholzi/Soundbeatsv2"
  },
  "bugs": {
    "url": "https://github.com/mholzi/Soundbeatsv2/issues"
  },
  "homepage": "https://github.com/mholzi/Soundbeatsv2#readme",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.22.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.22.0",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-lit": "^1.9.1",
    "eslint-plugin-prettier": "^5.0.0",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "lit": "^2.8.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "moduleNameMapping": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "custom_components/soundbeatsv2/frontend/src/**/*.js",
      "!custom_components/soundbeatsv2/frontend/src/**/*.test.js",
      "!custom_components/soundbeatsv2/frontend/src/data/**"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/custom_components/soundbeatsv2/frontend/src/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:lit/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "lit",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "warn",
      "no-unused-vars": "warn",
      "@typescript-eslint/no-unused-vars": "warn",
      "lit/no-invalid-html": "error",
      "lit/no-useless-template-literals": "warn"
    },
    "ignorePatterns": [
      "dist/",
      "node_modules/",
      "*.min.js"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}